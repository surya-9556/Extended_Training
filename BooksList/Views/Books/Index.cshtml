@model BooksList.Models.BooksDetails
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" 
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Index</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Index","Books",FormMethod.Post))
        {
            <table>
                <tr>
                    <td>
                        @Html.DisplayNameFor(m=>m.Books)
                    </td>
                    <td>
                        @Html.DropDownListFor(m=>m.BookId, Model.Books, "Please select")
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(m=>m.Quantity)
                    </td>
                    <td>
                        @Html.EditorFor(m=>m.Quantity)
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Submit" class="btn btn-success"/>
                    </td>
                </tr>
            </table>
        }
        @if(TempData["Message"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@TempData["Message"]");
                    };
                </script>
            }
    </div>
</body>
</html>
