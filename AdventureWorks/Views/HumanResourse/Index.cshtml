@model IEnumerable<AdventureWorks.Models.ViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Index</title>
</head>
<body>

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                        <h2>Department's Details</h2>
                        @Html.DropDownList("HumanRes", (IEnumerable<SelectListItem>)TempData["HumanRes"])
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h2>Group Details</h2>
                    @Html.DropDownList("HumanRes", (IEnumerable<SelectListItem>)TempData["HumanRes1"])
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <div>
        <table align="center" class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Bussiness Entity Id</th>
                    <th>First Name</th>
                    <th>Gender</th>
                    <th>Date of birth</th>
                    <th>Marital Status</th>
                    <th>HireDate</th>
                    <th>Job Title</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(ModelItem => item.employee.BusinessEntityID)</td>
                        <td>@Html.DisplayFor(ModelItem => item.people.FirstName)</td>
                        <td>@Html.DisplayFor(ModelItem => item.employee.Gender)</td>
                        <td>@Html.DisplayFor(ModelItem => item.employee.BirthDate)</td>
                        <td>@Html.DisplayFor(ModelItem => item.employee.MaritalStatus)</td>
                        <td>@Html.DisplayFor(ModelItem => item.employee.HireDate)</td>
                        <td>@Html.DisplayFor(ModelItem => item.employee.JobTitle)</td>
                    </tr>
                }

            </tbody>

        </table>
    </div>

</body>
</html>
